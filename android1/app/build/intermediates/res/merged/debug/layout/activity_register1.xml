<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/reg_bg">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:background="@drawable/reg_nevbar"/>
            <Button
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:id="@+id/buttonReturn"
                android:background="@drawable/reg_prev_button"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="18dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingTop="68dp"
        android:paddingLeft="80dp"
        >
        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strUsername"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strEmail"
            android:background="@android:color/transparent"
            android:layout_marginTop="42dp"
            android:textColor="#FFFFFF"/>
        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strPassword"
            android:background="@android:color/transparent"
            android:layout_marginTop="42dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="310dp"
            android:layout_height="46dp"
            android:id="@+id/buttonContinue"
            android:background="@drawable/reg_cont_button"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="25dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="10dp"
            >
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/buttonFacebook"
                android:background="@drawable/reg_facebook"
                android:layout_margin="5dp"
                />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/buttonNaver"
                android:background="@drawable/reg_naver"
                android:layout_margin="5dp"
                />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/buttonGoogle"
                android:background="@drawable/reg_google"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>